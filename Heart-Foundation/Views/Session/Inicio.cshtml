@model Heart_Foundation.DTO.DTOLogin
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Puedes definir secciones adicionales que necesites en el <head> -->
    <!-- Por ejemplo, agregar un título específico para esta vista -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
  
<body id="page-top">
    <div class="login-dark">
        @using(Html.BeginForm("Inicio","Session", FormMethod.Post))
        {
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            <div class="form-group">
                @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", @placeholder = "Correo" } })
            </div>
            <div class="form-group">
                @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @type = "password" } })
            </div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Ingresar</button></div>
            <a href="#" class="forgot">¿Olvídó sus credenciales?</a>


        }
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>
