@model Heart_Foundation.DTO.DTORepresentantes

<div class="modal-content">
    <div class="modal-body">
        <div class="modal-header">

            <button type="button" class="btn btn-danger close" data-dismiss="modal" aria-label="Close" onclick="closemodal(this);">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) @*muestra los mensajes de error*@
        @using (Html.BeginForm("CargarRepresentantes", "Representante", FormMethod.Post, new { @onsubmit = "return handleFormSubmit();" }))
       {
            @Html.HiddenFor(model => model.idSolicitud)
           
                    <label asp-for="idRepresentante" class="control-label">Representante</label>
                    @Html.DropDownList("idRepresentante", (SelectList)ViewBag.Representantes, new { @class = "form-control" })
                    <span asp-validation-for="idRepresentante" class="text-danger"></span>
           <br />
            <div class="modal-footer">
                <div class="form-group">
                    <center>
                        <input type="submit" value="Guardar" class="btn btn-info submit" />
                    </center>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/js/datatables/tablas/global.js"></script>