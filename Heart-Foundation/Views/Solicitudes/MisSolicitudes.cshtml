<div class="container">
    <div class="col m12">
        <div class="form-group center">
            <div class="text-center">
                <a class="btn btn-primary" href=" @Url.Action("Solicitud","Solicitudes")">Nueva Solicitud</a>
                <a class="btn btn-danger" href=" @Url.Action("Index", "Home")">Regresar</a> <!--Regresa a la página anterior-->
            </div>
        </div>
    </div>
    <br />
    <h2>Lista de Solicitudes</h2>
    <div class="table-responsive">
        <table id="miTablaS" class="table table-striped table-bordered table-hover dataTables-List" style="table-layout:fixed;">
            <thead>
                <tr class="table table-bordered">
                    <th class="table-success">
                        Solicitante
                    </th>
                    <th class="table-success">
                        Estado
                    </th>
                    <th class="table-success">
                        Fecha Creación
                    </th>
                    <th class="table-success">
                        Acciones
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@*Adjuntar expediente*@

<div class="modal fade" id="adjutar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                Ingrese al expediente los documentos que usted considere necesario.
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <table class="table">
                        <thead id="encabezado">
                            <tr>
                                <th>
                                    <button class="btn btn-primary" id="addform" onclick="addform()">Agregar</button>
                                </th>
                            </tr>
                        </thead>
                        <tbody data-bind='foreach: {data: ListaAdjuntos}' id="tbodyadjuntos"></tbody>
                    </table>

                </div>
            </div>
            <div class="modal-footer">

                <button type="submit" class="btn btn-success" onclick="add()">Adjuntar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closemodal(this);">Cancelar</button>
            </div>
        </div>
    </div>
</div>



@* imagen *@
<div class="modal" id="modalimages" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn btn-danger close" data-dismiss="modal" aria-label="Close" onclick="closemodal(this);">
                    <span aria-hidden="true">&times;</span>
                </button>
                
            </div>
            <div class="modal-body">
                <div id="changerid" style="display:none;">
                    <center>
                        <button class="btn btn-info" id="prev" onclick="changeref(-1)" data-indexp="0" disabled>❮</button>
                        <button class="btn btn-info" id="next" onclick="changeref(1)">❯</button>
                    </center>
                </div>
                <br />
                <b id="nota"></b>
                <img id="miImagen" class="img-thumbnail" width="400" height="50">
            </div>

        </div>
    </div>
</div>

<div id="modalnotas" class="modal">
    <div class="modal-dialog" role="document">
        <div id="modalcontentnotas">
        </div>
    </div>
</div>


